<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:MauiApp1.ViewModels"
             x:Class="MauiApp1.DashboardBar"
             x:DataType="viewmodels:DashboardBarViewModel"
             Title="Dashboard">

    <StackLayout Padding="20" Spacing="10" BackgroundColor="LightGray">
        <Label 
            Text="My Dashboard" 
            FontSize="24" 
            FontAttributes="Bold" 
            Margin="0,20,0,30" />
        
        <Button 
            Text="Home" 
            Command="{Binding HomeCommand}"
            BackgroundColor="DodgerBlue" 
            TextColor="White" />
        
        <Button 
            Text="Profile" 
            Command="{Binding ProfileCommand}"
            BackgroundColor="DodgerBlue" 
            TextColor="White" />
        
        <Button 
            Text="Settings" 
            Command="{Binding SettingsCommand}"
            BackgroundColor="DodgerBlue" 
            TextColor="White" />
        
        <Button 
            Text="Logout" 
            Command="{Binding LogoutCommand}"
            BackgroundColor="OrangeRed" 
            TextColor="White" />
    </StackLayout>

</ContentPage>